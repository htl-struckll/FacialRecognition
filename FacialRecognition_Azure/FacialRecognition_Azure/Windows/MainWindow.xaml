<Window x:Class="FacialRecognition_Azure.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Azure Facial Recognition" Height="450" Width="800">
    <Grid>
        <ToolBar Margin="0,0,-0.4,0" Height="31" VerticalAlignment="Top">
            <Menu Margin="0,0,0,-0.4" Width="40">
                <MenuItem x:Name="StartStopBtn"  Click="StartStop_Click" Background="AliceBlue"  Header="Start" Height="25" Margin="0" Width="43"></MenuItem>
            </Menu>
            <Menu Margin="0,0,0,-0.4" Width="53">
                <MenuItem Height="25" Margin="0" Width="53" Background="AliceBlue" Header="Other">
                    <MenuItem Click="DisplayData_Click"  Header="Display Data"/>
                </MenuItem>
            </Menu>
        </ToolBar>

        <Image x:Name="CamDisplayRaw" Margin="0,36,9.6,10"/>
</Grid>
</Window>
